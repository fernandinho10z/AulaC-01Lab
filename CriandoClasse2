using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Exemplo
{
    class Retangulo
    {
        //atributos
        public float base_, altura; 
        //metodos
        public float CalcularArea()
        {
            return base_ * altura;
        }
        public void Desenhar()
        {
            int linha = (int)altura;
            int coluna = (int)base_;
            for (int i = 0; i < linha; i++)
            {
                for (int j = 0; j < coluna; j++)
                {
                    Console.Write("*");
                }
                Console.WriteLine();
            }
        }   
    }
}
